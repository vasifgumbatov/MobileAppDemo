<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_menu_graph"
    app:startDestination="@id/signInFragment">

    <fragment
        android:id="@+id/createAccountFragment"
        android:name="com.vasifgumbatov.newapplication.ui.createaccountscreen.CreateAccountFragment"
        android:label="fragment_create_account"
        tools:layout="@layout/fragment_create_account" />
    <fragment
        android:id="@+id/signInFragment"
        android:name="com.vasifgumbatov.newapplication.ui.signinscreen.SignInFragment"
        android:label="fragment_sign_in"
        tools:layout="@layout/fragment_sign_in" >
        <action
            android:id="@+id/action_signInFragment_to_createAccountFragment"
            app:destination="@id/createAccountFragment" />
        <action
            android:id="@+id/action_signInFragment_to_exampleFragment"
            app:destination="@id/exampleFragment" />
    </fragment>
    <fragment
        android:id="@+id/exampleFragment"
        android:name="com.vasifgumbatov.newapplication.ui.examplescreen.ExampleFragment"
        android:label="fragment_example"
        tools:layout="@layout/fragment_example" />
</navigation>